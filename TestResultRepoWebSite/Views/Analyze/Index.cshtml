@using TestResultRepoModels
@using TestResultRepoWebSite.Controllers

@{
    TestRun testRun = ViewBag.testRun;
    List<List<AnalyzeController.TestCaseFailure>> groupedFailures = ViewBag.GroupedFailures;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Analyze</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Current failing tests</h1>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 10px">
    <div class="row">
        <div class="col-sm-6 text-center">
            <h3>@ViewBag.testRun.Name</h3>
        </div>
        <div class="col-sm-6 text-center">
            <h3>@testRun.EndTime.AsDateTime()</h3>
        </div>
    </div>
</div>
<div class="d-flex flex-wrap">
    @{
        foreach (var suite in (ICollection<TestSuite>) ViewBag.failingTestSuites)
        {
            <div style="width: 33%;">
                @Html.Action("RenderViewFromTestSuite", "TestSuiteCard", new { testsuite = suite, showDate = false })
            </div>
        }
    }
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Most common error messages</h1>
        </div>
    </div>
</div>
<div class="d-flex flex-wrap">
    <div style="width: 100%;">
        @{
            foreach (List<AnalyzeController.TestCaseFailure> group in groupedFailures)
            {
                Guid idGuid = Guid.NewGuid();
                <div class="failureGroupCard">
                    <div id="@("accordion_" + idGuid)">
                        <div class="card text-white">
                            <div class="card-header d-flex flex-row bg-danger" id="@("heading_" + idGuid)" data-toggle="collapse" data-target="@("#collapse_" + idGuid)" aria-expanded="true" aria-controls="@("#collapse_" + idGuid)">
                                <div class="truncate ">
                                    <div>@group.FirstOrDefault().Failure.Message</div>
                                </div>
                                <span class="badge badge-primary ml-auto">@group.Count</span>
                            </div>
                            <div id="@("collapse_" + idGuid)" class="collapse" aria-labelledby="@("heading_" + idGuid)" data-parent="@("#accordion_" + idGuid)">
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        @foreach (AnalyzeController.TestCaseFailure failure in group as ICollection<AnalyzeController.TestCaseFailure>)
                                        {
                                            Guid idGuid2 = Guid.NewGuid();
                                            <div class="failureCard">
                                                <div id="@("accordion_" + idGuid2)">
                                                    <div class="card text-white">
                                                        <div class="card-header cardlisttext d-flex flex-row bg-danger" id="@("heading_" + idGuid2)" data-toggle="collapse" data-target="@("#collapse_" + idGuid2)" aria-expanded="true" aria-controls="@("#collapse_" + idGuid2)">
                                                            <div class="truncate">
                                                                <a>@failure.TestCase.Name</a>
                                                            </div>   
                                                        </div>
                                                        <div id="@("collapse_" + idGuid2)" class="collapse" aria-labelledby="@("heading_" + idGuid2)" data-parent="@("#accordion_" + idGuid2)">
                                                            <div class="card-body">
                                                                <ul class="list-group list-group-flush carddetailtext">
                                                                    @if (@failure.TestCase.Failure.Message != "")
                                                                    {
                                                                        <p>@failure.TestCase.Failure.Message</p>
                                                                    }

                                                                    @if (@failure.TestCase.Failure.StackTrace != "")
                                                                    {
                                                                        <p>@failure.TestCase.Failure.StackTrace</p>
                                                                    }
                                                                </ul>
                                                            </div>
                                                        </div> 
                                                    </div>
                                                </div>
                                            </div>
                                         }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>  
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Flaky tests</h1>
        </div>
    </div>
</div>
</html>
