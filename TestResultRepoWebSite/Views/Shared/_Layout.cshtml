@using System.Configuration
@using System.ServiceModel.Syndication
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("JavaScript", required: false)
</head>
<body>
<div class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto">
                
                @{
                    var categoriesString = ConfigurationManager.AppSettings["Categories"].Split(',');
                    foreach (var category in categoriesString)
                    {
                        var trimmedCategory = category.Trim();
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Latest", "TestRuns", new {category = @trimmedCategory})">@trimmedCategory</a>
                        </li>
                    }
                }
            </ul>
        </div>
        @*<div class="navbar-collapse collapse">
            <ul class="navbar-nav ml-auto">

                @{
                    foreach (var category in categoriesString)
                    {
                        var trimmedCategory = category.Trim();
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Latest", "Analyze", new {category = @trimmedCategory})">Analyze @trimmedCategory</a>
                        </li>
                    }
                }
            </ul>
        </div>*@
    </div>
</div>
<div class="container body-content col-sm-12">
    @RenderBody()
    <footer></footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/js/CopyToClipboard.js"></script>
</body>
</html>